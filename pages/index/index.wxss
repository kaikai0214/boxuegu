/* 轮播区域 */
.lunbo{
  width: 750rpx;
}
.lunbo image{
  width: 750rpx;
  height: 300rpx;
  display: inline;
}

/* 导航区域 */
.nav{
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding:30rpx 50rpx;
}
.nav image{
  width: 74rpx;
  height: 74rpx;
}

/* 课程区域 */
.lesson{
  background: #fff;
  margin-top: 20rpx;
}

/* 竖杠 */
