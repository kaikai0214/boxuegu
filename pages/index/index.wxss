}
.icon-shouye_shugang_shijiantixing:before {
  content: "\e62a";
}

.top_shugang{
  display: flex;
}
.top_shugang image{
  width: 20rpx;
}
.lesson_top{
  display: flex;
  justify-content: space-between;
  padding:30rpx 40rpx 0rpx 40rpx;
  line-height: 50rpx;
  height: 50rpx;
}

/* 课程下区 */
.bottom_item{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.bottom_item image{
  width: 330rpx;
  height: 186rpx;
  border-radius: 15rpx;
}
.item_info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 30rpx;
  width: 300rpx;
}
.item_content{
  font-size: 10px;
  display: flex;
  justify-content: space-between;
}

/* 推荐课程区 */
.recommend_content{
  display: flex;
  justify-content: space-between;
}