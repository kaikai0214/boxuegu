/* 公共样式 */
page{
  background-color: #f5f5f5;
    font-size:12px;
}

/* 顶部logo加搜索 */
.top{
  display: flex;
  justify-content: space-between;
  padding:20rpx 20rpx;
}
.logo{
  width:182rpx;
  height: 52rpx;
}

